func card(nodeset params) {
  apply _wrap('card', params).* b
}

match .card b {
  <div class="card card_lang_{.lang} _init" data-nb="card">
    <div class="card__switch">
      link({
        'class': 'card__link'
        'pseudo': true()
        'current': true()
        'content': 'ru'
      })
      link({
        'class': 'card__link'
        'pseudo': true()
        'content': 'en'
      })
    </div>
  </div>
}