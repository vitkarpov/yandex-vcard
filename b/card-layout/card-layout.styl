.card-layout
  position: relative

  width: 650px
  height: 320px


.card-layout__left
  position: absolute
  overflow: hidden
  z-index: 2

  width: 475px
  height: 320px

  background: #eee


.card-layout__text
  position: relative
  top: 10px
  left: 10px

  width: 465px
  height: 300px

  background: #fff
  box-shadow: 0 0 8px rgba(0, 0, 0, 0.3)


.card-layout__top
.card-layout__bottom
  position: absolute
  overflow: hidden

  left: 475px
  width: 85px

  height: 161px
  padding: 0

  background: #eee

.card-layout__top
  top: 0

.card-layout__bottom
  bottom: 0


.card-layout__arrow
  position: absolute
  left: 0

  width: 0px
  height: 0px

.card-layout__arrow:after
  content: ""
  position: absolute
  left: 0

  width: 75px
  height: 150px

  background: #fff
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3)

.card-layout__arrow_top
  bottom: 0
  transform: skew(26.3deg)

.card-layout__arrow_top:after
  bottom: 0

.card-layout__arrow_bottom
  top: 0
  transform: skew(-26.3deg);

.card-layout__arrow_bottom:after
  top: 0
